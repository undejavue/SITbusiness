<controls:ChildWindow x:Class="SITBusiness.Views.InfoWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="200" 
           Title="InfoWindow">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="ОК" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Center"  Grid.Row="1" />
        <TextBlock Height="80" HorizontalAlignment="Center" Name="txt_Message" Text="Сообщение" VerticalAlignment="Center" Width="300" TextWrapping="Wrap" />
    </Grid>
</controls:ChildWindow>
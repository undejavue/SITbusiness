<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="SITBusiness.Views.cwnd_ResultToDBGrid"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           
           Title="Подтверждение выполнения операции">

    <Grid x:Name="grid_ResultLayoutRoot">
        <StackPanel>
            <TextBlock Name="txt_message" TextWrapping="Wrap" Width="300" Text="Текст сообщения" Margin="10"></TextBlock>
            <StackPanel HorizontalAlignment="Center" Margin="5,0,10,0" >
                <sdk:DataGrid Name="dg_Result" HorizontalAlignment="Center" VerticalAlignment="Top" Height="200" Width="300">
                    
                </sdk:DataGrid>          
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="OKButton" Content="Подтвердить" Width="96" Height="24" Margin="5" Click="OKButton_Click"></Button>
                <Button Name="CancelButton" Content="Отмена" Width="96" Height="24" Margin="5" Click="CancelButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>

</controls:ChildWindow>
